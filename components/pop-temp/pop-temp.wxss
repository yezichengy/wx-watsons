.special-item image{
  width:180rpx;
  height:180rpx;
}
.special-item>view:nth-of-type(1){
  position:relative;
}
.special-item>view:nth-of-type(1) text{
  position:absolute;
  background:#ff6692;
  padding:0 6rpx 4rpx 6rpx;
  color:#fff;
  font-weight:bold;
  left:0;
  bottom:0;
  font-size:24rpx;
  border-top-right-radius:10rpx;
}
.special-item>view:nth-of-type(2){
color:#444;
overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-box-orient:vertical;
-webkit-line-clamp:2;
word-break:break-all;
word-wrap:break-word;
font-weight:bold;
max-width:194rpx;
margin:0 8rpx;
}
.special-item>view:nth-of-type(3)>text:nth-of-type(1){
  color:#fc487b;
  font-size:30rpx;
  margin:0 8rpx;
}
.special-item>view:nth-of-type(3)>text:nth-of-type(2){
  color:#919090;
  font-size:24rpx;
  text-decoration:line-through;
}