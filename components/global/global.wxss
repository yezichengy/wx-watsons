/* components/global/global.wxss */
.head-pic image{
   height:866rpx;
   width:100%;
}
/* 好价秒杀 */
.special-items{
  height:316rpx;
  white-space:nowrap;
  width:100%;
  padding:10rpx;
  font-size:24rpx;
}
.special-item{
  display:inline-block;
  width:212rpx;
  height:296rpx;
  padding:0 16rpx;
}
.special-item>view:nth-of-type(1)>image{
  width:180rpx;
  height:180rpx;
}
.special-item>view:nth-of-type(1){
  position:relative;
  width:180rpx;
  height:180rpx;
}
.special-item>view:nth-of-type(1)>text{
  position:absolute;
  bottom:0;
  left:0;
  color:#ff6692;
  background:#ffe2ec;
  padding:0 6rpx;
}
.special-item>view:nth-of-type(2){
  margin:8rpx 0 10rpx 0;
  width:180rpx;
}
.special-item>view:nth-of-type(2)>text{
  color:#444;
  word-break:break-all;
  word-wrap:break-word;
  white-space:pre-line;
 display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  text-overflow:ellipsis;
  font-size:24rpx;
}
.special-item>view:nth-of-type(3)>text:nth-of-type(1){
  color:#ff6692;
}
.special-item>view:nth-of-type(3)>text:nth-of-type(2){
  color:#dad8d8;
  margin-left:10rpx;
  text-decoration:line-through;
}
/* 全球购买图片 */
.global-pic>image:nth-of-type(1){
  width:100%;
  height:360rpx;
  margin-bottom:-8rpx;
}
.global-pic>image:nth-of-type(2){
  width:100%;
  height:1390rpx;
  margin-bottom:-8rpx;
}
.global-pic>image:nth-of-type(3){
  width:100%;
  height:318rpx;
  margin-bottom:-8rpx;
}