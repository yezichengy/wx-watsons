/* components/pop-temp/pop-temp.wxss */
.special-items{
  /* width:auto; */
  display:flex;
  flex-flow:nowrap row;
  height:350rpx;
  padding:10rpx 0 0rpx 0;
  font-size:24rpx;
  /* overflow:auto; */
  box-sizing:border-box;
  margin-bottom:20rpx;
}
.special-item{
  height:100%;
  width:210rpx;
  padding:0 15rpx;
  box-sizing:border-box;
  display:flex;
  flex-flow:wrap column;
  justify-content:space-around;
}
.special-item>view:nth-of-type(1){
  position:relative;
}
